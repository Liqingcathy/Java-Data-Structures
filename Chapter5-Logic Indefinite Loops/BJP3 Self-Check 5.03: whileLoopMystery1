public class ForWhileLoops {

	public static void main(String[] args) {
		mystery (1);     //output: 1 0
		mystery (6);     //output: 4 2
    mystery (19);    //output: 16 4
    mystery (39);    //output: 32 5
    mystery (74);    //output: 64 6
	}	
    public static void mystery(int x) {
    	int y = 1;
    	int z = 0;
    	while (2 * y <= x) {
    		y = y * 2;
    		z++;
    	}
    	System.out.println(y + " " + z);
    
	}

}
